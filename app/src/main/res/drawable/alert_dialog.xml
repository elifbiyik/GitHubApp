<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kenar renkleri için iki adet solid katmanı ekle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CFC3E4" /> <!-- Kenar rengi -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#96ffffff" /> <!-- Orta kısım rengi -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>


