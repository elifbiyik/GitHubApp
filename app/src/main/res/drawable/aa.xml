<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kenar renkleri için iki adet solid katmanı ekle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BCBCBC" /> <!-- Kenar rengi -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_dynamic_neutral100" /> <!-- Orta kısım rengi -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>